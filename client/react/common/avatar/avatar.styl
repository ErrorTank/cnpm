.avatar{
  width 65px
  height 65px
  border-radius 50%
  overflow hidden
  display inline-block
  position relative
  img{
    top 50%
    left 50%
    width 65px
    height 65px
    transform translate(-50%, -50%)
    position absolute
  }
  .fake-ava{
    top 50%
    left 50%
    width 65px
    height 65px
    transform translate(-50%, -50%)
    position absolute
    font-size 20px
    font-weight bold
    line-height 65px
    display inline-block
    background-color #d3d2d3
    color #919090
  }
}