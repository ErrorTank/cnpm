.k-breadcrumb{
  background-color #efefef
  padding 0
  margin 0
  .breadcrumb-items{
    overflow hidden
    .k-breadcrumb-item{
      &.active{
        color #333
      }
      display inline-block
      color #999
      font-size 13px
      padding 12px 10px
      padding-left 40px
      position relative
      cursor pointer
      .item-cosmetic{
        position absolute
        top 5px
        height 33px
        transform rotateZ(-45deg)
        width 33px

        border-width 0 2px 2px 0

        border-color grey
        border-style solid
        left -10px

      }
    }
  }

}