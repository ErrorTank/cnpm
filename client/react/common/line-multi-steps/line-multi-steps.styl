.line-multi-steps{
  .navigate-bar{
    padding 25px
    .steps{
      width 800px
      margin auto !important
      .line-step{
        position relative
        &:last-child{
          .ls-process{
            width 0
          }
        }
        .ls-title{
          font-size 14px
          color #a3a3a3
          text-align center
        }
        .ls-process{
          left 50%
          position relative
          height 6px
          background-color #ebebeb
          margin 20px 0

        }
        .label-dot{
          color tikiblack
          font-size 15px
          background-color white
          border none
          box-shadow #666 0 0 2px
          width 26px
          height 26px
          position absolute
          top 30px
          z-index 1
          left 50%
          transform translateX(-50%)
          text-align center
          border-radius 50%
          line-height 26px
        }
        &.active{
          .ls-title{
            color tikiblack
          }
          .label-dot{
            background-color tikiblue
            color white
          }

        }
        &.complete{
          .ls-process{
            background-color tikiblue !important
          }

        }
      }
    }
  }
}