.search-input-box{
  display inline-block
  overflow hidden
  font-size 13px
  .wrapper{
    display flex
    .search-input{
      margin 0
      input{
        height 30px
        padding 6px 10px !important
        border-radius 3px 0 0 3px
        width 250px
        font-size 13px
        outline none !important
        border-right none
        &:focus{
          border-color #ced4da
        }
      }

    }
    .search-btn{

      height 30px
      background-color #eaebf0
      border 1px solid #ced4da
      border-radius 0 3px 3px 0
      &:hover{
        color lighten(#333, 30%)
      }
      overflow hidden
      color #333
    }
  }

}