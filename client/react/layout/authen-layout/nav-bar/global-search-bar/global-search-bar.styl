.global-search-bar{
  width 500px
  display flex
  align-items flex-end
  .input {
    flex-grow 1
    margin-bottom 0.5px
    height 38px
    input{
      width 100%
      height 100%
      top 0
      border 0
      outline none
      border-radius 3px 0 0 3px
      padding 0 10px
      font-size sm - 0.2rem
    }
  }
  .search-btn{
    height 38px
    background-color #edeef2
    padding 0 15px 0 15px
    color #4a4a4a
    font-size sm - 0.2rem
    text-align center
    line-height: 38px;
    font-weight 550
    border-radius 0 3px 3px 0
    cursor pointer
    &:hover{
      background-color darken(#edeef2, 5%)
    }
    i{
      font-size sm - 0.1rem
      color #4a4a4a
      margin-right 6px
    }
  }
}