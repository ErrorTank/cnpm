//checkout
.cart-col-1{
    padding: 0px 15px 0px 15px;
    background-color: white;
    border-radius: 10px;
    width: 983px;
    .shopping-cart-item{
        padding: 20px;

         .img-item-thumnail img{
            width: 140px;
            height: 110px;
            padding-right: 15px;
        }

        .product-full-info{
            float: left;
            width: 788px;
            p{
                font-size: 14px;
                color: #333;
                margin: 0 0 10px;
            }
            .name{
                margin-bottom: 7px;
                line-height: 20px;
                padding-top: 0;
                a{
                    color: #242424;
                    font-weight: 400;
                }
                a:hover{
                    color:#007ff0;
                    text-decoration: none;
                }
            }
            .description{
                font-size: 13px;
            }
            .box-price{
                float: left;
                width: 150px;
                text-align: right;
                padding-right: 25px;
                .price-1{
                        font-size: 16px;
                        margin-bottom: 5px;
                        font-weight: 500;
                        padding-top: 0;
                        color: #333;
                    }
                .price-2{
                        font-size: 12px;
                        margin-bottom: 8px;
                        text-decoration: line-through;
                        color: #a2a2a2;
                        line-height: 20px;
                        .sale{
                            border-radius: 2px;
                            margin: 0;
                            text-transform: uppercase;
                            background: 0 0;
                            color: #242424;
                            font-weight: 500;
                            font-size: 13px;
                            margin-left: 17px;
                            padding: 0;
                            text-decoration: none !important;
                        }
                    }
                }
            }
        }
}

