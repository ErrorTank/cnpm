.checkout-route{
  white-space nowrap
  font-size 14px
  min-height 300px
  //background-color white
  position relative
  color tikiblack
  padding 0
  .checkout-info-box{
    .product-section{
      margin-bottom 15px
    }
    .price-line{
      margin-bottom 13px
      font-size 12px
      color tikiblack
      span{
        &:nth-of-type(2){
          float right
        }
      }
      &::after{
        display table
        content ""
        clear both
      }
    }
    .total{
      border-top 2px solid #c9c9c9
      padding-top 12px
      span{
        float right
        color #ee2347
        font-size 19px
      }
      &::after{
        display table
        content ""
        clear both
      }
    }
    .cart-list{
      .item{
        padding 12px 0
        border-bottom 1px solid #c9c9c9
        &::after{
          display table
          content ""
          clear both
        }
        .price{
          float right
          font-size 12px
        }
        .info{
          display inline-block
          width 200px
          vertical-align top
          .name-qty{
            font-size 11px
            white-space pre-wrap
            .qty{
              padding-right 10px
              color tikiblack
            }
            .name{
              color tikiblue
            }
          }
          .provider{
            font-size 12px
            white-space pre-wrap
            margin-top 5px
          }
        }
      }
    }
    .cl-header{
      border-bottom 1px solid #c9c9c9
      padding-bottom 10px
      .cl-title{
        font-size 13px
        line-height 31px
      }
      .cl-btn{
        float right
        border 1px solid #ccc
        font-size 12px
        padding 6px 14px
        outline-color #ccc
        border-radius 2px
        height 31px
        background-color white
      }
      &::after{
        content ""
        clear both
        display table
      }
    }
  }
  .step-section{
    margin-top 10px
    .step-title{
      margin 15px 0
      font-size 18px
      color #5f5f5f
      font-weight bold
    }
    .step-body{
      margin-top 20px
      white-space nowrap
      & > div{
        display inline-block
        vertical-align top
      }
      .left-panel{
        width 790px
      }
      .separate{
        width calc(100% - 1180px)
      }
      .section-box{
        border 1px solid #ccc
        background-color white
        padding 15px 25px
        border-radius 4px
      }
      .right-panel{
        width 390px


      }
      .step-address{
        .suggest{
          font-size 14px
          color tikiblack
          margin-bottom 20px
        }
      }
      .dash-box{
        padding 10px 15px
        border 1px dashed #090
        border-radius 3px
        background-color white
      }
      .step-register{
        height 200px

        text-align center
        .suggest{
          text-align center
          font-size 16px
          margin-top 40px
        }
        .btn-login{
          background-color tikiyellow
          margin-top 20px
          font-size 15px
          padding 10px 30px
          &:hover{
            background-color darken(tikiyellow, 20%)
          }
        }
      }
    }
  }
}