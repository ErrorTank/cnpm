.checkout-route{
  white-space nowrap
  font-size 14px
  min-height 300px
  //background-color white
  position relative
  color tikiblack
  padding 0
  .checkout-info-box{
    margin-bottom 15px
    .product-section{
      margin-bottom 15px
    }
    .price-line{
      margin-bottom 13px
      font-size 12px
      color tikiblack
      span{
        &:nth-of-type(2){
          float right
        }
      }
      &::after{
        display table
        content ""
        clear both
      }
    }
    .total{
      border-top 2px solid #c9c9c9
      padding-top 12px
      span{
        float right
        color #ee2347
        font-size 19px
      }
      &::after{
        display table
        content ""
        clear both
      }
    }
    .cart-list{
      .item{
        padding 12px 0
        border-bottom 1px solid #c9c9c9
        &::after{
          display table
          content ""
          clear both
        }
        .price{
          float right
          font-size 12px
        }
        .info{
          display inline-block
          width 200px
          vertical-align top
          .name-qty{
            font-size 11px
            white-space pre-wrap
            .qty{
              padding-right 10px
              color tikiblack
            }
            .name{
              color tikiblue
            }
          }
          .provider{
            font-size 12px
            white-space pre-wrap
            margin-top 5px
          }
        }
      }
    }
    .cl-header{
      border-bottom 1px solid #c9c9c9
      padding-bottom 10px
      .cl-title{
        font-size 13px
        line-height 31px
      }
      .cl-btn{
        float right
        border 1px solid #ccc
        font-size 12px
        padding 6px 14px
        outline-color #ccc
        border-radius 2px
        height 31px
        background-color white
      }
      &::after{
        content ""
        clear both
        display table
      }
    }
  }
  .step-section{
    margin-top 10px
    .step-title{
      margin 15px 0
      font-size 18px
      color #5f5f5f
      font-weight bold
    }
    .step-body{
      margin-top 20px
      white-space nowrap
      & > div{
        display inline-block
        vertical-align top
      }
      .left-panel{
        width 790px
      }
      .separate{
        width calc(100% - 1180px)
      }
      .section-box{
        border 1px solid #ccc
        background-color white
        padding 15px 25px
        border-radius 4px
      }
      .right-panel{
        width 390px
        .address-info{
          color tikiblack
          .name{
            font-size 15px
            font-weight bold
            margin 12px 0
          }
          .line{
            white-space pre-wrap
            font-size 13px
          }
        }

      }
      .step-address{
        .btn-confirm{
          background-color: #00b6f0;
          color white
          &:hover {
            background-color: darken(#00b6f0, 20%);
          }
        }
        .btn-cancel{
          background-color white
          color tikiblack
          border 1px solid grey
        }
        .btn-confirm
        .btn-cancel{
          position: relative;
          padding 8px 20px
          font-size: 15px;


          &:disabled {
            pointer-events: none;
          }





          .registration-loading {
            color: tikiblack;
            font-size: 22px;
          }
        }
        .cmt-select{
          margin-bottom 15px
          cursor pointer
        }
        .registration-input {
          padding-bottom: 0px !important;
          margin-bottom 15px
          label {
            font-size: 14px;
            font-weight: 500;
          }



          .form-control-feedback {
            font-size: 12px;
            margin-top: 5px;
            font-weight: 500;
          }

          input {
            font-size: 14px;
          }
        }
        .suggest{
          font-size 14px
          color tikiblack
          margin-bottom 20px
        }
        .address-form{
          position relative
          padding 20px 100px
          background-color white
          border 1px solid #ccc
          border-radius 4px
          margin-top 15px
          .actions{
            margin-top 10px
            text-align right
          }
          .opacity-panel{
            position absolute
            top 0
            left 0
            z-index 1
            width 100%
            height 100%
            background-color white
            opacity 0.6
          }
        }
      }
      .dash-box{
        padding 10px 15px
        border 1px dashed #090
        border-radius 3px
        width 570px
        background-color white
        .db-header{
          margin-bottom 6px
          &::after{
            content: ""
            display table
            clear: both
          }
          .username{
            font-size 15px
            font-weight bold
          }
          .sub{
            float right
            font-size 11px
            color #090
          }
        }
        .db-body{
          p{
            font-size 13px
            text-overflow ellipsis
          }
          .actions{
            margin-top 10px
            text-align right
            button {
              padding 8px 20px !important
              font-size 13px !important
            }

          }
        }
      }
      .step-checkout{
        .shipment-select{
          font-size 15px !important
          & > label{

            font-weight bold !important
            margin-bottom 15px !important
          }
          .radio-wrap{
            span{
              border-color tikiblue !important
              &::after{
                background-color tikiblue !important
                border-color tikiblue !important
              }
            }
          }
        }
      }
      .step-register{
        height 200px

        text-align center
        .suggest{
          text-align center
          font-size 16px
          margin-top 40px
        }
        .btn-login{
          background-color tikiyellow
          margin-top 20px
          font-size 15px
          padding 10px 30px
          &:hover{
            background-color darken(tikiyellow, 20%)
          }
        }
      }
    }
  }
}