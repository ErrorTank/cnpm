.index-banner{
  width 100%
  white-space nowrap
  background-color transparent
  margin-top 20px
  .categories-wrapper{
    width 245px
    display inline-block
    vertical-align top
  }
  .banner-wrapper{
    width calc(100% - 245px)
    display inline-block
    height 400px
    vertical-align top
    .banner-slider-content{
      width 100%
      height 100%
      &.first{
        background-color red
      }
      &.sec{
        background-color green
      }
      &.third{
        background-color black
      }
      &.four{
        background-color blue
      }
    }
  }
}