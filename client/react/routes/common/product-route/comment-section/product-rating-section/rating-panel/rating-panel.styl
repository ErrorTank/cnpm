.rating-panel{

  padding 25px 0
  .rp-title{
    color #444
    font-size 18px
    margin-bottom 10px
  }
  .cmt-form{
    .add-picture{
      & > span{
        color tikiblack
        font-size 14px
      }
      .upload-img-cmt{
        font-size 13px
        color tikiblue
        margin-left 10px
        padding 7px 16px
        border-radius 4px
        background-color white
        border 1px solid tikiblue
        transition all 0.1s ease
        &:disabled{
          pointer-events none
        }
        &:hover{
          color white
          background-color tikiblue
        }
      }
    }

    .create-cmt{
      &:disabled{
        pointer-events none
      }
    }
    .suggest{
      font-size 12px
      color #9a9a9a
    }
    .star-rating{
      margin-left 15px
    }
    .rp-input{
      padding-bottom 0px !important


      .form-control-feedback
      {
        font-size 12px
        margin-top 5px
        font-weight 500
      }
      input
      textarea
      {
        font-size 14px
        margin-top 6px
      }
      textarea{
        height 115px !important
      }
    }
    width 600px
    margin auto
    .rp-form-gr{
      margin-bottom 15px
      .label{
        color tikiblack
        font-size 16px
      }
    }
  }
}