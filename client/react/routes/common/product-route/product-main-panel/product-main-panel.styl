.product-main-panel{
  //overflow hidden
  white-space nowrap
  background-color white
  border-radius 0 0 4px 4px
  height auto
  .scroll-to-comment{
    color #007ff0
    font-size 13px
    margin-left 5px
    cursor pointer
    &:hover{
      color darken(#007ff0, 20%)
    }

  }
  .main-info{
    white-space nowrap
    .info-section{
      width 445px
      vertical-align top
      padding 20px 24px
      padding-bottom 25px
      display inline-block
      .promotion-notify{
        color tikiblack
        margin-top 12px
        .left-info
        .right-info{
          display inline-block
          vertical-align top
        }
        .left-info{
          text-align center
          font-size 13px
          padding-right 12px
          border-right 1px solid #ccc
          .promotion-badge{
            background-color #002e6e
            color white
            padding 0 5px !important
            border-radius 2px
            text-align center
            font-size 11px
          }
        }
        .right-info{
          padding-left 12px
          .value{
            font-size 15px
            font-weight bold
          }
        }
      }
    }
    .provider-section{
      width calc(100% - 445px)
    }
  }
  .description-section{
    padding 15px 0

  }
  .pricing-section{
    font-size 13px
    color #9b9b9b
    border-bottom 1px solid #ececec
    padding-bottom 15px
    .value{
      color #ff3425
    }
    .main-price{
      .value{
        font-size 19px
        font-weight 600
      }
    }
  }
  .brand-name{
    color #333
    font-size 13px
    & > span{
      color #007ff0
      cursor pointer
      &:hover{
        color darken(#007ff0, 20%)
      }
    }
  }
  .product-left-panel{
    width 527px
    display inline-block
    padding 24px 24px 20px 20px
    border-right 2px solid #f7f7f7
    vertical-align top
  }
  .product-right-panel{
    vertical-align top
    width calc(100% - 527px)
    display inline-block
    .header-info{
      padding 16px 24px 5px
      border-bottom 1px solid #ececec
    }
    .product-name{
      font-size 24px
      color #333
      font-weight 300
      line-height 30px
    }
  }
}