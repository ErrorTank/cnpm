.product-main-panel{
  overflow hidden
  background-color white
  border-radius 0 0 4px 4px
  height auto
  .product-left-panel{
    width 527px
    display inline-block
    padding 24px 24px 20px 20px
    border-right 2px solid #f7f7f7
  }
  .product-right-panel{
    width calc(100% - 527px)
    display inline-block
    padding 24px 24px 20px 20px
  }
}