.reset-password{
  background-color #c9e6ef
  padding 100px 0
  padding-bottom 200px

  .rp-input{
    padding-bottom 0px !important
    label{
      font-size 14px
      font-weight 500
    }
    .m-radio-list{
      white-space nowrap
      .radio-wrap{
        display inline-block
        width 50%
      }
      .m-radio{

        margin 0
        & > input:checked ~ span:after{
          border-color tikiblue !important

          background-color tikiblue !important
        }
        & > input:checked ~ span{
          border-color tikiblue !important
          border-width 2px
        }
        span{
          border-color lighten(tikiblue, 50%) !important
          width 22px
          top -2px
          height 22px

        }
      }
    }

    .form-control-feedback
    {
      font-size 12px
      margin-top 5px
      font-weight 500
    }
    input{
      font-size 14px

    }
  }
  .rp-btn{
    position relative
    height 40px
    font-size 15px
    margin-top 20px
    display flex
    justify-content center
    color #4a4a4a
    &:disabled{
      pointer-events none
    }
    width 100%
    background-color tikiyellow
    &:hover{
      background-color darken(tikiyellow, 20%)
    }
    align-items center
    .rp-loading{
      color tikiblack
      font-size 22px
    }
  }
  .rp-form-wrapper{
    background-color white
    padding 20px
    width 360px
    border-radius 4px
    margin auto
    border-top 5px solid tikiblue
    .rp-title{
      color tikiblack
      font-weight 550
      font-size sm + 0.3rem
    }
  }
}