
html,body{
  background-color #f2f2f2
}
.btn-disabled{
  pointer-events none
  opacity 0.5
  cursor not-allowed
}

.disabledEvent{
  pointer-events none
}
.flex-wrapper{
  display flex
}
.disable-a-behavior{
  text-decoration none !important
}
.disabled{
  opacity 0.4
}
.cover{
  width 100%
  height 100%

}
.p-relative{
  position relative
}
.not-allowed {
  cursor not-allowed
}
html
  box-sizing border-box
  font-size 62.5%
  font-family Helvetica,Arial,sans-serif

button
  cursor pointer
a
  text-decoration none
@keyframes faded{
  from{
    opacity 0
  }
  to{
    opacity 1
  }
}
body
  margin 0
  padding 0
  color white
  font-size md
  button
    cursor pointer
  button:disabled
    cursor default
h1
h2
h3
h4
p
button
  margin 0
  padding 0
.row{
  margin 0 !important
}
ul{
  padding 0
  margin 0
  list-style-type none
  li{
    padding 0
  }
}

scrollStyle(grey)
@keyframes spinner{
  from{
    transform rotateZ(0)
  }
  to{
    transform rotateZ(360deg)
  }
}
.spin{
  animation spinner 1s linear forwards infinite
}
@keyframes move{
  from {
    left 0

  }
  to {
    left 50%
    top 50%
    transform translate(-50%,-50%)

  }
}
.of-hidden{
  overflow hidden
}
.long-btn{
  outline none
  border-radius 4px
  text-align center
  width 100%
  padding 8px 20px
}
.no-pointer-event{
  pointer-events none
}
